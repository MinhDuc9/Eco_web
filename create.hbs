<div class="mt-4">
    <h3>Create new product form</h3>

    <form method="POST" action="/products/store">
        <div class="form-group">
            <label for="description">Product name</label>
            <input type="text" class="form-control" id="name" name="name" placeholder="Enter ">
        </div>

        <div class="form-group">
            <label for="description">Product description</label>
            <input type="text" class="form-control" id="description" name="description" placeholder="Enter ">
        </div>

        <div class="form-group">
            <label for="description">Product image</label>
            <input type="text" class="form-control" id="image" name="image" placeholder="Enter ">
        </div>

        <div class="form-group">
            <label for="description">Product videoId</label>
            <input type="text" class="form-control" id="videoId" name="videoId" placeholder="Enter ">
        </div>

        <div class="form-group">
            <label for="description">Product details</label>
            <input type="text" class="form-control" id="details" name="details" placeholder="Enter ">
        </div>
        
        <button type="submit" class="btn btn-primary">Add product</button>
    </form>
</div>